  // 顯示狀態消息
  function showStatusMessage(message, type = "info") {
    statusMessage.textContent = message;
    statusMessage.classList.remove("hidden", "bg-red-600", "bg-gray-700", "bg-green-600");

    if (type === "error") {
      statusMessage.classList.add("bg-red-600");
    } else if (type === "success") {
      statusMessage.classList.add("bg-green-600");
    } else {
      statusMessage.classList.add("bg-gray-700");
    }

    // 自動隱藏（成功和信息消息）
    if (type !== "error") {
      setTimeout(hideStatusMessage, 3000);
    }
  }

  // 隱藏狀態消息
  function hideStatusMessage() {
    statusMessage.classList.add("hidden");
  }

  // 日期格式化函數 (YYYY-MM-DD)
  function formatDate(date) {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    return `${year}-${month}-${day}`;
  }

  // 載入可疑IP數據
  async function loadSuspiciousIpData() {
    try {
      showStatusMessage("正在載入可疑IP數據...");

      const threshold = parseInt(document.getElementById("ipThreshold").value) || 3;

      // 清空表格並顯示載入中
      document.getElementById("suspiciousIpTableBody").innerHTML =
        '<tr><td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">載入中...</td></tr>';

      // 構建API請求URL
      let url = `${API_BASE_URL}?action=suspicious_ips&threshold=${threshold}`;

      // 發送請求
      const response = await fetch(url);
      const data = await response.json();

      if (data.success) {
        // 處理可能的數據結構差異
        let ipData = data.data;

        // 如果數據是陣列，直接使用；如果是物件，可能需要提取
        if (Array.isArray(ipData)) {
          // do nothing, ipData is already an array
        } else if (ipData.suspicious_ips) {
          ipData = ipData.suspicious_ips;
        } else if (ipData.ips) {
          ipData = ipData.ips;
        } else {
          // 嘗試將物件轉換為陣列
          ipData = Object.values(ipData);
        }

        // 確保數據格式正確
        ipData = ipData.map((item) => ({
          ip_address: item.ip_address || item.ip || "未知IP",
          user_count: parseInt(item.user_count) || 0,
          total_vote_count: parseInt(item.total_vote_count || item.total_votes) || 0,
        }));

        // 渲染可疑IP列表
        renderSuspiciousIpList(ipData);
        hideStatusMessage();
      } else {
        throw new Error(data.message || "載入可疑IP數據失敗");
      }
    } catch (error) {
      console.error("載入可疑IP數據失敗:", error);
      showStatusMessage("載入失敗: " + error.message, "error");
      document.getElementById("suspiciousIpTableBody").innerHTML =
        `<tr><td colspan="4" class="px-6 py-4 text-center text-sm text-red-500">載入失敗: ${error.message}</td></tr>`;
    }
  }

  // 渲染可疑IP列表
  function renderSuspiciousIpList(ipData) {
    if (ipData.length === 0) {
      document.getElementById("suspiciousIpTableBody").innerHTML =
        '<tr><td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">沒有找到可疑IP</td></tr>';
      return;
