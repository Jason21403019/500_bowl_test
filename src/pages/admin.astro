---
// Admin Dashboard for 2025 Story
import Layout from "../layouts/Layout.astro";

// 頁面標題和描述
const pageTitle = "500碗 - 管理後台";
const pageDescription = "500碗投票系統管理後台";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-yellow-50">
    <!-- 管理後台頁首 -->
    <header class="bg-gray-800 text-yellow-50 shadow-md">
      <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold">500碗 - 管理後台</h1>
          <div class="flex space-x-2">
            <span id="statusMessage" class="text-sm bg-gray-700 px-3 py-1 rounded-full hidden"
            ></span>
            <button
              id="exportExcelBtn"
              class="bg-green-600 text-white px-3 py-1 rounded-md text-sm hover:bg-green-500 transition font-medium"
            >
              📊 導出Excel
            </button>
            <button
              id="refreshBtn"
              class="bg-yellow-400 text-gray-800 px-3 py-1 rounded-md text-sm hover:bg-yellow-300 transition font-medium"
            >
              刷新數據
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- 主控台內容 -->
    <div class="container mx-auto px-4 py-6">
      <!-- 統計卡片區域 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-400">
          <h3 class="text-gray-600 text-sm font-medium mb-1">總用戶數</h3>
          <div class="flex items-end">
            <span id="totalUsers" class="text-3xl font-bold text-gray-800">--</span>
            <span class="text-sm text-gray-500 ml-2 mb-1">位用戶</span>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-400">
          <h3 class="text-gray-600 text-sm font-medium mb-1">總投票數</h3>
          <div class="flex items-end">
            <span id="totalVotes" class="text-3xl font-bold text-gray-800">--</span>
            <span class="text-sm text-gray-500 ml-2 mb-1">票</span>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-400">
          <h3 class="text-gray-600 text-sm font-medium mb-1">今日投票數</h3>
          <div class="flex items-end">
            <span id="todayVotes" class="text-3xl font-bold text-gray-800">--</span>
            <span class="text-sm text-gray-500 ml-2 mb-1">票</span>
          </div>
        </div>
      </div>

      <!-- Tab 切換區域 -->
      <div class="mb-8">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button
              id="userListTab"
              class="border-yellow-500 text-yellow-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
              aria-current="page"
            >
              用戶列表
            </button>
            <button
              id="suspiciousIpTab"
              class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
            >
              可疑IP清單
            </button>
          </nav>
        </div>
      </div>

      <!-- 用戶列表區域 -->
      <div id="userListContent" class="bg-white rounded-lg shadow-md mb-8">
        <!-- 將原有的用戶列表內容包裝在這裡 -->
        <div class="p-4 border-b bg-yellow-50">
          <!-- 用戶列表篩選 -->
          <div id="usersFilterSection">
            <div class="flex flex-wrap gap-3">
              <div class="flex-1 min-w-[200px]">
                <input
                  type="text"
                  id="userSearchInput"
                  placeholder="搜尋用戶ID或Email 或 IP地址"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400"
                />
              </div>
              <button
                id="userSearchBtn"
                class="bg-gray-700 text-yellow-50 px-4 py-2 rounded-md hover:bg-gray-600 transition font-medium"
              >
                搜尋
              </button>
            </div>
          </div>
        </div>

        <!-- 內容區域 -->
        <div class="p-4">
          <!-- 用戶列表 -->
          <div id="usersContent">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-yellow-100">
                  <tr>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      用戶ID
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Email
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      IP地址
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      投票數
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      最近投票
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >
                      操作
                    </th>
                  </tr>
                </thead>
                <tbody id="usersTableBody" class="bg-white divide-y divide-gray-200">
                  <!-- 用戶列表將由JavaScript動態填充 -->
                  <tr>
                    <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                      載入中...
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 可疑IP清單區域 -->
      <div id="suspiciousIpContent" class="bg-white rounded-lg shadow-md mb-8 hidden">
        <div class="p-4 border-b bg-yellow-50">
          <div class="flex flex-wrap gap-3 items-center">
            <div class="flex-1 min-w-[200px]">
              <input
                type="number"
                id="ipThreshold"
                placeholder="設定用戶數閾值 (預設: 3)"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400"
                value="3"
                min="2"
                max="50"
              />
            </div>
            <button
              id="updateSuspiciousIpBtn"
              class="bg-gray-700 text-yellow-50 px-4 py-2 rounded-md hover:bg-gray-600 transition font-medium"
            >
              更新列表
            </button>
            <span class="text-sm text-gray-600"> 顯示共用同一IP地址的用戶群組 </span>
          </div>
        </div>
        <div class="p-4">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-yellow-100">
                <tr>
                  <th
                    scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >IP地址</th
                  >
                  <th
                    scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >用戶數</th
                  >
                  <th
                    scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >總投票數</th
                  >
                  <th
                    scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                    >操作</th
                  >
                </tr>
              </thead>
              <tbody id="suspiciousIpTableBody" class="bg-white divide-y divide-gray-200">
                <!-- 可疑IP列表將由JavaScript動態填充 -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- 用戶詳情模態框 -->
      <div
        id="userDetailModal"
        class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden z-50"
      >
        <div
          class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto border-t-4 border-yellow-400"
        >
          <div class="border-b px-6 py-4 flex justify-between items-center bg-yellow-50">
            <h3 class="text-lg font-medium text-gray-800">用戶詳情</h3>
            <button id="closeUserDetailBtn" class="text-gray-400 hover:text-gray-600">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div id="userDetailContent" class="p-6">
            <!-- 用戶詳情將由JavaScript動態填充 -->
            <p class="text-center text-gray-500">載入中...</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // 引入 SheetJS 庫
  import * as XLSX from "https://unpkg.com/xlsx@0.18.5/xlsx.mjs";

  // API 端點
  const API_BASE_URL = "https://lab-event.udn.com/bd_500bowls_vote2025_test/API/backend.php";

  // 狀態變數
  let usersData = [];

  // DOM 元素
  const userSearchInput = document.getElementById("userSearchInput");
  const userSearchBtn = document.getElementById("userSearchBtn");
  const refreshBtn = document.getElementById("refreshBtn");
  const exportExcelBtn = document.getElementById("exportExcelBtn");
  const usersTableBody = document.getElementById("usersTableBody");
  const totalUsers = document.getElementById("totalUsers");
  const totalVotes = document.getElementById("totalVotes");
  const todayVotes = document.getElementById("todayVotes");
  const userDetailModal = document.getElementById("userDetailModal");
  const closeUserDetailBtn = document.getElementById("closeUserDetailBtn");
  const userDetailContent = document.getElementById("userDetailContent");
  const statusMessage = document.getElementById("statusMessage");

  // 初始化頁面
  document.addEventListener("DOMContentLoaded", () => {
    // 綁定事件監聽器
    setupEventListeners();

    // 輸出初始狀態

    // 加載初始數據
    loadUsers();
  });

  // 新增函數：切換到用戶列表標籤
  function switchToUserListTab() {
    const userListTab = document.getElementById("userListTab");
    const suspiciousIpTab = document.getElementById("suspiciousIpTab");
    const userListContent = document.getElementById("userListContent");
    const suspiciousIpContent = document.getElementById("suspiciousIpContent");

    // 更新標籤樣式
    userListTab.classList.add("border-yellow-500", "text-yellow-600");
    userListTab.classList.remove("border-transparent", "text-gray-500");
    suspiciousIpTab.classList.remove("border-yellow-500", "text-yellow-600");
    suspiciousIpTab.classList.add("border-transparent", "text-gray-500");

    // 切換內容顯示
    userListContent.classList.remove("hidden");
    suspiciousIpContent.classList.add("hidden");
  }

  // 設置事件監聽器
  function setupEventListeners() {
    // 搜尋按鈕
    userSearchBtn.addEventListener("click", () => {
      loadUsers();
    });

    // 監聽搜尋輸入框變化
    userSearchInput.addEventListener("input", (e) => {
      // 當輸入框被清空時，自動重新載入所有資料
      if (e.target.value.trim() === "") {
        loadUsers(); // 自動重新載入
      }
    });

    // 監聽按鍵事件，Enter 鍵觸發搜尋
    userSearchInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        e.preventDefault();
        loadUsers();
      }
    });

    refreshBtn.addEventListener("click", refreshData);

    // Excel 導出按鈕
    exportExcelBtn.addEventListener("click", exportToExcel);

    // 關閉用戶詳情模態框
    closeUserDetailBtn.addEventListener("click", () => {
      userDetailModal.classList.add("hidden");
    });

    // 點擊模態框外部關閉
    userDetailModal.addEventListener("click", (e) => {
      if (e.target === userDetailModal) {
        userDetailModal.classList.add("hidden");
      }
    });

    // Tab 切換
    const userListTab = document.getElementById("userListTab");
    const suspiciousIpTab = document.getElementById("suspiciousIpTab");
    const userListContent = document.getElementById("userListContent");
    const suspiciousIpContent = document.getElementById("suspiciousIpContent");

    userListTab.addEventListener("click", () => {
      userListTab.classList.add("border-yellow-500", "text-yellow-600");
      userListTab.classList.remove("border-b-2", "text-sm");
      suspiciousIpTab.classList.remove("border-yellow-500", "text-yellow-600");
      suspiciousIpTab.classList.add("border-transparent", "text-gray-500");

      userListContent.classList.remove("hidden");
      suspiciousIpContent.classList.add("hidden");
    });

    suspiciousIpTab.addEventListener("click", () => {
      suspiciousIpTab.classList.add("border-yellow-500", "text-yellow-600");
      suspiciousIpTab.classList.remove("border-b-2", "text-sm");
      userListTab.classList.remove("border-yellow-500", "text-yellow-600");
      userListTab.classList.add("border-transparent", "text-gray-500");

      suspiciousIpContent.classList.remove("hidden");
      userListContent.classList.add("hidden");

      // 只有在顯示可疑IP清單時才加載數據
      loadSuspiciousIpData();
    });

    // 添加更新可疑IP按鈕的事件監聽器
    const updateSuspiciousIpBtn = document.getElementById("updateSuspiciousIpBtn");
    if (updateSuspiciousIpBtn) {
      updateSuspiciousIpBtn.addEventListener("click", () => {
        loadSuspiciousIpData();
      });
    }

    // 使用事件委派來處理動態生成的按鈕
    document.addEventListener("click", (e) => {
      // 處理查看IP用戶按鈕
      if (e.target.classList.contains("view-ip-users-btn")) {
        const ipAddress = e.target.getAttribute("data-ip-address");
        if (ipAddress) {
          // 切換回用戶列表標籤
          switchToUserListTab();
          // 顯示該IP的用戶
          showUsersByIp(ipAddress);
        }
      }

      // 處理查看用戶詳情按鈕
      if (e.target.classList.contains("view-user-btn")) {
        const userId = e.target.getAttribute("data-user-id");
        if (userId) {
          showUserDetail(userId);
        }
      }
    });
  }

  // Excel 導出功能
  async function exportToExcel() {
    try {
      showStatusMessage("正在準備導出數據...");

      // 顯示按鈕載入狀態
      const originalText = exportExcelBtn.textContent;
      exportExcelBtn.textContent = "⏳ 導出中...";
      exportExcelBtn.disabled = true;

      // 獲取所有用戶的詳細資料（包含投票記錄）
      const allUsersWithVotes = await getAllUsersWithVoteDetails();

      // 創建工作簿
      const workbook = XLSX.utils.book_new();

      // 1. 用戶概覽工作表
      const usersOverview = createUsersOverviewSheet(allUsersWithVotes);
      XLSX.utils.book_append_sheet(workbook, usersOverview, "用戶概覽");

      // 2. 詳細投票記錄工作表
      const voteDetails = createVoteDetailsSheet(allUsersWithVotes);
      XLSX.utils.book_append_sheet(workbook, voteDetails, "投票詳細記錄");

      // 3. 統計匯總工作表
      const statistics = createStatisticsSheet(allUsersWithVotes);
      XLSX.utils.book_append_sheet(workbook, statistics, "統計匯總");

      // 生成檔案名稱（包含時間戳）
      const now = new Date();
      const timestamp = now.toISOString().slice(0, 19).replace(/[:-]/g, "").replace("T", "_");
      const filename = `500碗投票數據_${timestamp}.xlsx`;

      // 導出檔案
      XLSX.writeFile(workbook, filename);

      showStatusMessage("Excel 檔案導出成功！", "success");
    } catch (error) {
      console.error("導出Excel失敗:", error);
      showStatusMessage("導出失敗: " + error.message, "error");
    } finally {
      // 恢復按鈕狀態
      exportExcelBtn.textContent = originalText;
      exportExcelBtn.disabled = false;
    }
  }

  // 獲取所有用戶的詳細投票資料
  async function getAllUsersWithVoteDetails() {
    const allUsersData = [];

    for (let i = 0; i < usersData.length; i++) {
      const user = usersData[i];
      try {
        // 獲取每個用戶的詳細投票記錄
        const url = `${API_BASE_URL}?action=user_vote_history&user_id=${encodeURIComponent(user.user_id)}`;
        const response = await fetch(url);
        const data = await response.json();

        if (data.success) {
          allUsersData.push({
            ...user,
            detailData: data.data,
          });
        } else {
          // 如果獲取失敗，仍然加入基本資料
          allUsersData.push({
            ...user,
            detailData: null,
          });
        }

        // 更新進度
        showStatusMessage(`正在獲取用戶資料... (${i + 1}/${usersData.length})`);

        // 避免過於頻繁的請求
        if (i < usersData.length - 1) {
          await new Promise((resolve) => setTimeout(resolve, 100));
        }
      } catch (error) {
        console.error(`獲取用戶 ${user.user_id} 詳細資料失敗:`, error);
        allUsersData.push({
          ...user,
          detailData: null,
        });
      }
    }

    return allUsersData;
  }

  // 創建用戶概覽工作表
  function createUsersOverviewSheet(allUsersData) {
    const data = [
      // 標題行
      [
        "用戶ID",
        "Email",
        "IP地址",
        "總投票數",
        "投票天數",
        "最近投票日期",
        "最近投票食物",
        "折扣卡號",
        "PIN碼",
        "首次登入",
        "最近登入",
      ],
    ];

    allUsersData.forEach((user) => {
      const detailData = user.detailData;

      // 計算投票天數
      const voteDays = detailData?.vote_count_by_date
        ? Object.keys(detailData.vote_count_by_date).length
        : 0;

      // 獲取最近投票資訊
      let recentVoteDate = "-";
      let recentVoteFood = "-";
      if (detailData?.votes && detailData.votes.length > 0) {
        const latestVote = detailData.votes[0];
        recentVoteDate = latestVote.date || "-";
        recentVoteFood = latestVote.food_title || "-";
      }

      // 獲取折扣卡資訊
      const discountCode = detailData?.discount_pin_data?.discount_code || "-";
      const pinCode = detailData?.discount_pin_data?.pin_code || "-";

      // 獲取登入資訊
      const firstLogin = detailData?.member_info?.first_login_time || "-";
      const lastLogin = detailData?.member_info?.last_login_time || "-";

      data.push([
        user.user_id,
        user.user_email || "-",
        user.user_ip || "-",
        user.vote_count || 0,
        voteDays,
        recentVoteDate,
        recentVoteFood,
        discountCode,
        pinCode,
        firstLogin,
        lastLogin,
      ]);
    });

    return XLSX.utils.aoa_to_sheet(data);
  }

  // 創建投票詳細記錄工作表
  function createVoteDetailsSheet(allUsersData) {
    const data = [
      // 標題行
      ["用戶ID", "Email", "投票日期", "投票時間", "食物ID", "食物名稱"],
    ];

    allUsersData.forEach((user) => {
      const detailData = user.detailData;

      if (detailData?.votes && detailData.votes.length > 0) {
        detailData.votes.forEach((vote) => {
          // 分離日期和時間
          let displayDate = vote.date || "-";
          let displayTime = "-";

          if (vote.datetime) {
            const parts = vote.datetime.split(" ");
            if (parts.length === 2) {
              displayDate = parts[0];
              displayTime = parts[1];
            }
          }

          data.push([
            user.user_id,
            user.user_email || "-",
            displayDate,
            displayTime,
            vote.food_id || "-",
            vote.food_title || "未知食物",
          ]);
        });
      }
    });

    return XLSX.utils.aoa_to_sheet(data);
  }

  // 創建統計匯總工作表
  function createStatisticsSheet(allUsersData) {
    // 統計各種數據
    const totalUsers = allUsersData.length;
    const totalVotes = allUsersData.reduce((sum, user) => sum + (user.vote_count || 0), 0);

    // 計算今日投票數
    const today = formatDate(new Date());
    const todayVotes = allUsersData.reduce((sum, user) => {
      if (user.detailData?.vote_count_by_date?.[today]) {
        return sum + user.detailData.vote_count_by_date[today];
      }
      return sum;
    }, 0);

    // 統計有Email的用戶數
    const usersWithEmail = allUsersData.filter(
      (user) => user.user_email && user.user_email !== "-"
    ).length;

    // 統計有投票的用戶數
    const usersWithVotes = allUsersData.filter((user) => (user.vote_count || 0) > 0).length;

    // 統計食物投票排行
    const foodVoteCount = {};
    allUsersData.forEach((user) => {
      if (user.detailData?.votes) {
        user.detailData.votes.forEach((vote) => {
          const foodTitle = vote.food_title || "未知食物";
          foodVoteCount[foodTitle] = (foodVoteCount[foodTitle] || 0) + 1;
        });
      }
    });

    // 排序食物投票數
    const sortedFoods = Object.entries(foodVoteCount)
      .sort(([, a], [, b]) => b - a)
      .slice(0, 10); // 取前10名

    const data = [
      ["統計項目", "數值"],
      ["總用戶數", totalUsers],
      ["總投票數", totalVotes],
      ["今日投票數", todayVotes],
      ["有Email用戶數", usersWithEmail],
      ["有投票用戶數", usersWithVotes],
      ["平均每用戶投票數", totalUsers > 0 ? (totalVotes / totalUsers).toFixed(2) : 0],
      [],
      ["食物排行榜", "票數"],
      ...sortedFoods,
    ];

    return XLSX.utils.aoa_to_sheet(data);
  }

  // 載入用戶列表
  async function loadUsers() {
    try {
      showStatusMessage("正在載入用戶數據...");

      // 清空表格並顯示載入中
      usersTableBody.innerHTML =
        '<tr><td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">載入中...</td></tr>';

