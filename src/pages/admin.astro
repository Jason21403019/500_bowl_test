    let html = "";

    ipData.forEach((item) => {
      // 根據用戶數量決定樣式
      let userCountBadge = "";
      const userCount = item.user_count || 0;

      if (userCount >= 10) {
        userCountBadge = `<span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-medium">${userCount}</span>`;
