<section class="actpopup">
  <div class="actpopup__container">
    <button class="actpopup__button" id="privacy-btn"> 個資聲明 </button>
    <button class="actpopup__button" id="notice-btn"> 注意事項 </button>
  </div>
</section>

<style lang="scss" scoped>
  .actpopup {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 80px;
    @media (max-width: 480px) {
      margin-bottom: 40px;
    }

    &__container {
      display: flex;
      gap: 20px;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    }

    &__button {
      cursor: pointer;
      background-color: #000;
      color: #ebe549;
      padding: 15px 35px;
      border-radius: 35px;
      text-decoration: none;
      font-size: 30px;
      text-align: center;
      box-shadow: 5px 5px 2px 3px rgba(0, 0, 0, 0.2);
      width: 350px;
      height: 70px;
      border: none;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      @media (max-width: 992px) {
        width: 300px;
        font-size: 24px;
        height: 60px;
        width: 250px;
      }
      @media (max-width: 640px) {
        width: 180px;
        font-size: 20px;
        height: 50px;
      }
      @media (max-width: 480px) {
        width: 120px;
        font-size: 18px;
        height: 46px;
        padding: 10px 20px;
      }
      @media (max-width: 360px) {
        width: 100px;
        font-size: 16px;
        height: 40px;
        padding: 8px 16px;
      }

      &:hover {
        background-color: #333;
        transform: translateY(-2px);
        box-shadow: 7px 7px 4px 3px rgba(0, 0, 0, 0.3);
      }

      &:active {
        transform: translateY(1px);
        box-shadow: 3px 3px 1px 2px rgba(0, 0, 0, 0.2);
      }
    }
  }
</style>

<script>
  // 彈窗功能
  document.addEventListener("DOMContentLoaded", function () {
    const privacyBtn = document.getElementById("privacy-btn");
    const noticeBtn = document.getElementById("notice-btn");

    // 個資聲明彈窗
    privacyBtn?.addEventListener("click", function () {
      showModal(
        "https://lab-event.udn.com/bd_500bowls_vote2025_test/image/personinfo_title.svg",
        getPrivacyContent()
      );
    });

    // 注意事項彈窗
    noticeBtn?.addEventListener("click", function () {
      showModal(
        "https://lab-event.udn.com/bd_500bowls_vote2025_test/image/information_title.svg",
        getNoticeContent()
      );
    });

    // 顯示彈窗函數
    function showModal(titleImageSrc: string, content: string) {
      // 創建彈窗背景
      const modalOverlay = document.createElement("div");
      modalOverlay.className = "modal-overlay";
      modalOverlay.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(24px);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      `;
      // 創建彈窗容器（用來放置關閉按鈕）
      const modalContainer = document.createElement("div");
      modalContainer.className = "modal-container";
      modalContainer.style.cssText = `
        position: relative;
        max-width: 900px;
        width: 100%;
        max-height: 85vh;
      `;
      // 創建彈窗內容
      const modalContent = document.createElement("div");
      modalContent.style.cssText = `
        background: white;
        border-radius: 28px;
        max-width: 900px;
        max-height: 85vh;
        overflow-y: auto;
        padding: 30px 120px;
        position: relative;
        box-shadow: rgba(0, 0, 0, 0.5) 8px 12px 0px 4px;
      `;
      // 自定義滾軸樣式
      const style = document.createElement("style");
      style.textContent = `
        .modal-content::-webkit-scrollbar {
          width: 6px;
        }
        .modal-content::-webkit-scrollbar-track {
          background: transparent;
          margin: 40px 100px 40px 0;
        }
        .modal-content::-webkit-scrollbar-thumb {
          background: #000;
          border-radius: 4px;
        }
        .modal-content::-webkit-scrollbar-thumb:hover {
          background: #333;
        }
        @media (max-width: 1024px) {
          .modal-container {
            max-width: 700px !important;
          }
          .modal-content {
            padding: 30px 30px !important;
          }
        }
        @media (max-width: 814px) {
          .modal-close-btn {
            top: -30px !important;
            right: 0px !important;
          }
          .modal-title{
            max-width: 280px !important;
          }
        }
        @media (max-width: 390px) {
          .modal-content {
            padding: 20px 20px !important;
          }
          .modal-title{
            max-width: 250px !important;
          }
        }
      `;
      document.head.appendChild(style);
      modalContent.classList.add("modal-content");

      // 創建關閉按鈕（使用 SVG 圖片）
      const closeButton = document.createElement("button");
      closeButton.className = "modal-close-btn";
      closeButton.id = "close-modal";
      closeButton.innerHTML = `<img src="https://lab-event.udn.com/bd_500bowls_vote2025_test/image/close_btn.svg" alt="關閉" style="width: 100%; height: 100%;" />`;
      closeButton.style.cssText = `
        background: transparent;
        border: none;
        width: 24px;
        height: 24px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: -20px;
        right: -40px;
        z-index: 1001;
        padding: 0;
      `;
      modalContent.innerHTML = `
        <div style="text-align: center; margin-bottom: 30px;">
          <img src="${titleImageSrc}" alt="標題" class="modal-title" style="max-width: 350px; height: auto; margin: 0 auto;" />
        </div>
        <div style="color: #000; line-height: 1.6; font-size: 18px;">
          ${content}
        </div>
      `;

      // 組裝結構：容器 → 彈窗內容 + 關閉按鈕
      modalContainer.appendChild(modalContent);
      modalContainer.appendChild(closeButton);
      modalOverlay.appendChild(modalContainer);
      document.body.appendChild(modalOverlay);

      // 關閉彈窗事件
      const closeBtn = modalContent.querySelector("#close-modal");
      const closeModal = () => {
        document.body.removeChild(modalOverlay);
        // 清理樣式
        document.head.removeChild(style);
      };

      closeButton.addEventListener("click", closeModal);
      modalOverlay.addEventListener("click", function (e) {
        if (e.target === modalOverlay) {
          closeModal();
        }
      });

      // ESC 鍵關閉
      document.addEventListener("keydown", function (e) {
        if (e.key === "Escape") {
          closeModal();
        }
      });
    }

