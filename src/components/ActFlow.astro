<section class="actflow">
  <div class="actflow__container">
    <div class="actflow__step">
      <div class="actflow__circle">
        <img src="/image/login_icon.svg" alt="登入圖示" class="actflow__icon" />
        <h3 class="actflow__title">登入<br />udn 會員</h3>
      </div>
    </div>

    <div class="actflow__arrow">
      <img src="/image/right_arrow.svg" alt="箭頭" class="actflow__arrow-img" />
    </div>

    <div class="actflow__step">
      <div class="actflow__circle">
        <img src="/image/vote_icon.svg" alt="投票圖示" class="actflow__icon" />
        <h3 class="actflow__title">每天可投一票</h3>
      </div>
    </div>

    <div class="actflow__arrow">
      <img src="/image/right_arrow.svg" alt="箭頭" class="actflow__arrow-img" />
    </div>

    <div class="actflow__step">
      <div class="actflow__circle">
        <img src="/image/fill_icon.svg" alt="會員中心圖示" class="actflow__icon" />
        <h3 class="actflow__title">會員中心<br />填 e-mail 和手機</h3>
      </div>
    </div>

    <div class="actflow__arrow">
      <img src="/image/right_arrow.svg" alt="箭頭" class="actflow__arrow-img" />
    </div>

    <div class="actflow__step">
      <div class="actflow__circle">
        <img src="/image/prize_icon.svg" alt="開獎圖示" class="actflow__icon" />
        <h3 class="actflow__title">坐等開獎</h3>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .actflow {
    width: 90%;
    margin-bottom: 80px;
    @media (max-width: 1024px) {
      width: 100%;
      margin-bottom: 60px;
    }

    &__container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      gap: 20px;
      max-width: 1200px;
      margin: 0 auto;
      @media (max-width: 768px) {
        flex-direction: column;
        align-items: center;
        gap: 0px;
      }
    }

    &__step {
      display: flex;
      flex-direction: column;
      align-items: center;
      flex: 0 0 auto;
    }

    &__circle {
      width: 195px;
      height: 195px;
      background-color: #fbfadb;
      border-radius: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      gap: 10px;
      @media (max-width: 1024px) {
        width: 165px;
        height: 165px;
      }
      @media (max-width: 900px) {
        width: 135px;
        height: 135px;
      }
      @media (max-width: 768px) {
        width: 195px;
        height: 195px;
      }
    }

    &__icon {
      width: 90px;
      object-fit: contain;
      object-position: center;
      @media (max-width: 1024px) {
        width: 70px;
      }
      @media (max-width: 900px) {
        width: 60px;
      }
      @media (max-width: 768px) {
        width: 90px;
      }
    }

    &__title {
      font-size: 22px;
      font-weight: bold;
      color: #000;
      text-align: center;
      line-height: 1.3;
      display: block;
      @media (max-width: 1024px) {
        font-size: 20px;
      }
      @media (max-width: 900px) {
        font-size: 18px;
      }
      @media (max-width: 768px) {
        font-size: 22px;
      }
    }

    &__arrow {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 195px;
      flex-shrink: 0;
      @media (max-width: 1024px) {
        height: 165px;
      }
      @media (max-width: 900px) {
        height: 135px;
      }
      @media (max-width: 768px) {
        height: 65px;
      }
    }

    &__arrow-img {
      width: 20px;
      height: auto;
      object-fit: contain;
      @media (max-width: 768px) {
        width: 30px;
        content: url("/image/down_arrow.svg");
      }
    }
  }
</style>
